<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#945B9E"
    android:backgroundTint="#B5F6E1FA"
    android:padding="16dp">

    <TextView
        android:id="@+id/congratulations_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:text="Congratulations! You've completed all tasks for today!"
        android:textColor="#000000"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/congratulations_image"
        android:layout_width="215dp"
        android:layout_height="162dp"
        android:contentDescription="Congratulations"
        android:src="@drawable/celebrating" />
</LinearLayout>
